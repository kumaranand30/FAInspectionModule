    <script>
        $(document).on('keypress', function (e) {
            if (e.which == 13) {
                addParameterForDept();
                $("#txtParameter").val('');
                e.preventDefault();
                return false;
            }
        });
        var selectedDeptID;
        var deptList;
        window.onload = function () {
            getDepartmentList();
           
            //getContainerCount();
            //$(document).ready(function () {
            //    $('#tblParametersummary').dataTable({
            //        "bLengthChange": false,
            //        "bInfo": false,
