<script>
    var deptID;
    var department;
    window.onload = function () {
      
        getDepartmentList();
        var today = new Date();
        var date = (today.getFullYear() + '-' + (today.getMonth() + 1) + '-' + today.getDate())

        var currDate = new Date();
